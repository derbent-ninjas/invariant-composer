{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noLib": false,
    "target": "ES6",
    "sourceMap": false,
    // strictness
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "keyofStringsOnly": true
  }
}
