{
  "name": "@derbent-ninjas/invariant-composer",
  "version": "0.0.7",
  "description": "Useful tools for validation by composing invariants",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "publish": "npm publish --access=public && npm publish --access=public --@derbent-ninjas:registry=https://registry.npmjs.org",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/derbent-ninjas/invariant-composer.git"
  },
  "keywords": [
    "validation",
    "validator",
    "invariant",
    "composition"
  ],
  "author": "@derbent-ninjas",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/derbent-ninjas/invariant-composer/issues"
  },
  "homepage": "https://github.com/derbent-ninjas/invariant-composer#readme",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "tests",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
